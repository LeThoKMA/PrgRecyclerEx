<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_banner"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TV Shows"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/imv_banner"
            app:layout_constraintTop_toTopOf="@id/imv_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Movies"

            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/imv_banner"
            app:layout_constraintTop_toTopOf="@id/imv_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Categories "

            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/imv_banner"
            app:layout_constraintTop_toTopOf="@id/imv_banner" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="@id/imv_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My list"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/imv_banner"
            app:layout_constraintTop_toTopOf="@id/imv_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Play"
            android:textColor="@color/white"

            app:layout_constraintStart_toStartOf="@id/imv_banner"
            app:layout_constraintTop_toTopOf="@id/imv_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Info"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/imv_banner"
            app:layout_constraintTop_toTopOf="@id/imv_banner" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Slick * Offbeat * Comedy Anime"

        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom"
        app:layout_constraintEnd_toEndOf="@+id/layout_bottom"
        app:layout_constraintStart_toStartOf="@id/layout_bottom" />

    <TextView
        android:id="@+id/tv_spy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPY"
        android:textColor="@color/white"

        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_x"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="40sp"

        app:layout_constraintEnd_toEndOf="@id/tv_spy"
        app:layout_constraintStart_toStartOf="@id/tv_spy"
        app:layout_constraintTop_toBottomOf="@+id/tv_spy" />

    <TextView
        android:id="@+id/tv_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAMILY"
        android:textColor="@color/white"

        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@id/tv_x"
        app:layout_constraintStart_toStartOf="@id/tv_x"
        app:layout_constraintTop_toBottomOf="@+id/tv_x" />
</androidx.constraintlayout.widget.ConstraintLayout>